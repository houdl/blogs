<div class="container">
  <%= bootstrap_form_for @article, html:{class: "form"} do |f| %>
    <div class="row">
      <span class="col-md-4">
        <%= f.text_field :title, label: "标题",class: "form-control ", required: true %>
      </span>
    </div>

    <div class="row">
      <span class="col-md-7">
        <%= f.text_area :text, label: "内容", control_col: "col-md-7", rows: 10, required: true %>
      </span>
    </div>
    <div class="row">
      <span class="col-md-4">
        <% if @article.avatar.present?%>
          <label>图片</label><br>
          <%= image_tag(@article.avatar_url) %>
          <%= f.file_field :avatar, label: "重新选择" %>
          <%= f.hidden_field :avatar_cache %>
        <% else %>        
          <%= f.file_field :avatar, label: "选择图片" %>
          <%= f.hidden_field :avatar_cache %>
        <% end %>
      </span>
    </div>
    <div class="row">
      <%= f.submit "提交", class: "btn btn-default" %>
    </div>
  <% end %>
</div>
